  "uploadProfileImage": {
    "request": {
      "method": "POST",
      "url": "/api/v1/user/me/profile-image",
      "headers": {
        "Authorization": "Bearer {token}",
        "Content-Type": "multipart/form-data"
      },
      "formData": {
        "profileImage": "[파일 데이터]"
      }
    },
    "response": {
      "success": true,
      "message": "프로필 이미지가 업로드되었습니다.",
