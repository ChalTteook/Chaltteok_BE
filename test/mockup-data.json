  "deleteProfileImage": {
    "request": {
      "method": "DELETE",
      "url": "/api/v1/user/me/profile-image",
      "headers": {
        "Authorization": "Bearer {token}"
      }
    },
    "response": {
      "success": true,
      "message": "프로필 이미지가 삭제되었습니다."
